
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "rootDir": "./backend",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,

    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],

    "sourceMap": true,

    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["backend"],
  "exclude": ["node_modules", "dist"]
}   